rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Función helper para obtener la referencia a una empresa
    function getCompanyOwnerId(companyId) {
      return get(/databases/$(database)/documents/companies/$(companyId)).data.ownerUid;
    }

    // Empresas (Companies)
    match /companies/{companyId} {
      // PERMITIR LEER: si el usuario está autenticado
      allow read: if isAuthenticated();

      // PERMITIR CREAR: si está autenticado y se establece como propietario
      allow create: if isAuthenticated() && 
                      request.resource.data.ownerUid == request.auth.uid;
      
      // PERMITIR ACTUALIZAR: si el usuario es propietario
      allow update: if isAuthenticated() && 
                      resource.data.ownerUid == request.auth.uid;

      // PERMITIR BORRAR: si el usuario es propietario
      allow delete: if isAuthenticated() && 
                      resource.data.ownerUid == request.auth.uid;
    }

    // Cuentas Bancarias (Bank Accounts)
    match /bankAccounts/{accountId} {
      allow read: if isAuthenticated();
      
      allow create: if isAuthenticated() && 
                     getCompanyOwnerId(request.resource.data.companyId) == request.auth.uid;
                     
      allow update: if isAuthenticated() && 
                     getCompanyOwnerId(resource.data.companyId) == request.auth.uid;
                     
      allow delete: if isAuthenticated() && 
                     getCompanyOwnerId(resource.data.companyId) == request.auth.uid;
    }

    // Transacciones (de las cartolas bancarias)
    match /transactions/{transactionId} {
      allow read: if isAuthenticated();
      
      allow create: if isAuthenticated() && 
                     getCompanyOwnerId(request.resource.data.companyId) == request.auth.uid;
                     
      allow update: if isAuthenticated() && 
                     getCompanyOwnerId(resource.data.companyId) == request.auth.uid;
                     
      allow delete: if isAuthenticated() && 
                     getCompanyOwnerId(resource.data.companyId) == request.auth.uid;
    }
    
    // Regla para permitir a los usuarios leer cualquier documento
    // Esto hace más sencilla la depuración en desarrollo
    match /{document=**} {
      allow read: if isAuthenticated();
    }
  }
} 